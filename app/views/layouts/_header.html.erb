<header>
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm fixed-top">
    <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to 'Home', root_path %></h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <% if user_signed_in? %>
        <p>You're loged in as <%= link_to current_user.name, profile_path(current_user) %></p>
      <% end %>
    </nav>
    <% if user_signed_in? %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-outline-primary' %>
    <% else %>
      <%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-primary' %>
    <% end %>
  </div>
</header>