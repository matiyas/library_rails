<% if user_signed_in? %>

  <h1>Posts</h1>

  <% if can? :create, Post %>
    <%= link_to 'New Post', new_admins_post_path %>
  <% end %>

  <%= will_paginate @posts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title.truncate(40), [:admins, post] %></td>
          <td><%= post.content.truncate(100) %></td>
          <td><%= link_to post.user.name, profile_path(post.user) %></td>
          <td><%= time_ago_in_words(post.created_at) %> ago</td>
          <% if can? :edit, post %>
            <td><%= link_to 'Edit', edit_admins_post_path(post) %></td>
          <% end %>
          <% if can? :destroy, post %>
            <td><%= link_to 'Destroy', [:admins, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @posts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>
<% end %>
<br>