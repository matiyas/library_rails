<p id="notice"><%= notice %></p>

<h1>Books1</h1>
<%= will_paginate @books %>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Pages</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author %></td>
        <td><%= book.pages %></td>
        <% if can? :edit, book %>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <% end %>
        <% if can? :delete, book %>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @books %>

